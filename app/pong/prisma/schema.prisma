// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_URL")
}

model User {
  id         Int     @default(autoincrement()) @id
  email      String  @unique
  login      String  @unique
  avatar     String?
  sessionid  String?
}

model Image {
  id         Int     @default(autoincrement()) @id
  name       String  @unique
  content    Bytes
}
