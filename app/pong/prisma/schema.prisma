generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_URL")
}

model User {
  id         Int          @default(autoincrement()) @id
  email      String       @unique
  login      String       @unique
  avatar     String?
  sessionid  String?
  sysMsg     SysMessage[]
}

model SysMessage {
  id         Int          @default(autoincrement()) @id
  user       User         @relation(fields: [userId], references: [id])
  userId     Int
  content    String
  typeMsg    TypeMessage
}

enum TypeMessage {
  ACTION
  NOTIF
  MSG
}

